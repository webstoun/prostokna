div(data-Module="module-result")
    i.material-icons(data-El="close") close
    
    h2 Калькулятор
    
    nav.tabs-result
        span(data-El="tab-1")
            img(src="/images/index/s6/i-balcony.png", alt="")
            a(href="#") Остекление балконов
        span(data-El="tab-2", data-active="true")
            img(src="/images/index/s6/i-window.png", alt="")
            a(href="#") Оконные конструкции
    
    div(data-grid="inner-result-1")
